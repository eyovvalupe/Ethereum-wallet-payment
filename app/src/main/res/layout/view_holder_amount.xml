<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">

    <View
        android:id="@+id/backgroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_lawrence_background_single"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="72dp" />

    <TextView
        android:id="@+id/primaryName"
        style="@style/Headline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:textColor="?attr/TextColorBarsToDark"
        app:layout_constraintStart_toStartOf="@id/backgroundView"
        app:layout_constraintTop_toTopOf="@id/backgroundView"
        tools:text="Bitcoin" />

    <TextView
        android:id="@+id/primaryAmount"
        style="@style/Subhead2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="11dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/backgroundView"
        app:layout_constraintEnd_toStartOf="@+id/secondaryName"
        app:layout_constraintStart_toStartOf="@+id/primaryName"
        app:layout_constraintTop_toBottomOf="@+id/primaryName"
        tools:text="0.04071505 BNB" />

    <TextView
        android:id="@+id/secondaryAmount"
        style="@style/Headline1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:textAlignment="textEnd"
        android:textColor="@color/jacob"
        app:layout_constraintEnd_toEndOf="@id/backgroundView"
        app:layout_constraintStart_toEndOf="@id/primaryName"
        app:layout_constraintTop_toTopOf="@+id/primaryName"
        tools:text="$992" />

    <TextView
        android:id="@+id/secondaryName"
        style="@style/Subhead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/secondaryAmount"
        app:layout_constraintTop_toBottomOf="@+id/secondaryAmount"
        tools:text="US Dollar" />

</androidx.constraintlayout.widget.ConstraintLayout>
