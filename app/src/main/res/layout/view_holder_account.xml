<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewHolderRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:background="?CoinItemBackground"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="8dp">

    <!-- First line-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <ImageView
            android:id="@+id/backupBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/grey"
            android:indeterminateTintMode="src_atop"
            android:src="@drawable/ic_key"
            android:tint="@color/yellow_crypto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/accountName"
            style="@style/BaseSb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="?BallanceCoinNameColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backupBadge"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bitcoin" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Second line-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/accountCoin"
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:includeFontPadding="false"
            android:text="BTC, BCH, DASH, ETH, ERC20"
            android:textColor="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Actions -->

    <LinearLayout
        android:id="@+id/buttonsWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/buttonNew"
            style="@style/ButtonYellowText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/ManageKeys_New"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonImport"
            style="@style/ButtonYellowText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/ManageKeys_Import"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonUnlink"
            style="@style/ButtonYellowText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/ManageKeys_Unlink"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonBackup"
            style="@style/ButtonYellowText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/ManageKeys_Backup"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonShow"
            style="@style/ButtonYellowText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="@string/ManageKeys_Show"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
