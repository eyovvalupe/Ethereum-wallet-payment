<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    >

    <ImageView
        android:id="@+id/coinImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/coin_dash"
        android:tint="@color/dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtTitle"
        style="@style/BottomDialogText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/noto_sans_bold"
        android:textColor="@color/dark"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/coinImg"
        app:layout_constraintStart_toEndOf="@+id/coinImg"
        app:layout_constraintTop_toTopOf="@+id/coinImg"
        tools:text="Send BTC"
        />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        />

    <View
        android:id="@+id/backgroundColorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bars_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        />

    <ScrollView
        android:id="@+id/scrollView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/topAmountPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/noto_sans"
                android:textColor="@color/dark"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="BTC"
                />

            <EditText
                android:id="@+id/editTxtAmount"
                style="@style/BottomDialogText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/noto_sans"
                android:hint="@string/send_hint_amount"
                android:inputType="numberDecimal"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/topAmountPrefix"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/topAmountPrefix"
                tools:text="0.0021"
                />

            <View
                android:id="@+id/amountDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/grey_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSwitch"
                app:layout_constraintStart_toStartOf="@+id/topAmountPrefix"
                app:layout_constraintTop_toBottomOf="@+id/topAmountPrefix"
                />

            <ImageButton
                android:id="@+id/btnSwitch"
                style="@style/ImageButtonSmallGrey_4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/round_import_export_24_px"
                android:tint="@color/button_image_tint_color_selector"
                app:layout_constraintBottom_toBottomOf="@+id/amountDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/amountDivider"
                />

            <TextView
                android:id="@+id/txtHintInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/dark"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/topAmountPrefix"
                app:layout_constraintTop_toBottomOf="@+id/amountDivider"
                tools:text="$ 210"
                />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtHintInfo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/divider3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:fontFamily="@font/noto_sans"
                        android:singleLine="true"
                        android:textColor="@color/steel_grey"
                        android:textSize="16sp"
                        tools:text="1QHEbZG8NQT6vYCC8pyHvteNcmJ78B3ak3"
                        />

                    <TextView
                        android:id="@+id/txtAddressError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_error"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="@string/send_error_incorrect_address"
                        />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnBarcodeScan"
                    style="@style/ImageButtonSmallGrey_4"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/qr_code"
                    android:tint="@color/dark"
                    />

                <Button
                    android:id="@+id/btnPaste"
                    style="@style/ButtonSmallGrey_4"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:maxWidth="200dp"
                    android:minWidth="71dp"
                    android:text="@string/send_button_paste"
                    />

                <ImageButton
                    android:id="@+id/btnDeleteAddress"
                    style="@style/ImageButtonSmallGrey_4"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:src="@drawable/round_delete_24_px"
                    android:tint="@color/dark"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="67.5dp"
                android:background="@color/grey_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                />

            <TextView
                android:id="@+id/txtFeeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.5dp"
                android:text="@string/send_bottom_confirm_dialog_fee"
                android:textColor="@color/dark"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/topAmountPrefix"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                />

            <TextView
                android:id="@+id/txtFeePrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15.5dp"
                android:textColor="@color/dark"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/txtFeeTitle"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                tools:text="0.02 BTC"
                />

            <TextView
                android:id="@+id/txtFeeSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="@+id/btnSwitch"
                app:layout_constraintTop_toTopOf="@+id/txtFeePrimary"
                tools:text="$0.02"
                />

            <Button
                android:id="@+id/btnSend"
                style="@style/ButtonYellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/wallet_button_pay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFeePrimary"
                />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
