<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/root_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:backgroundTint="?BottomSendBackground"
    >

    <io.horizontalsystems.bankwallet.ui.extensions.CoinIconView
        android:id="@+id/coinIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtTitle"
        style="@style/BottomDialogText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/noto_sans_bold"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/coinIcon"
        app:layout_constraintStart_toEndOf="@+id/coinIcon"
        app:layout_constraintTop_toTopOf="@+id/coinIcon"
        tools:text="Send BTC"
        />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/steel_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        />

    <View
        android:id="@+id/backgroundView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?BottomTransactionInfoBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/sendForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:layout_constraintVertical_weight=".65"
        >

        <View
            android:id="@+id/inputBackgroundView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?BottomSendInputBackground"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/topAmountPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/noto_sans"
            android:textColor="?BottomDialogTextColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="BTC"
            />

        <EditText
            android:id="@+id/editTxtAmount"
            style="@style/BottomDialogText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:hint="@string/Send_Hint_Amount"
            android:inputType="number|numberDecimal"
            android:maxLines="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/topAmountPrefix"
            app:layout_constraintEnd_toStartOf="@+id/btnMax"
            app:layout_constraintStart_toEndOf="@+id/topAmountPrefix"
            tools:text="0.0021"
            />

        <View
            android:id="@+id/amountDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:background="@color/steel_20"
            app:layout_constraintEnd_toStartOf="@+id/btnMax"
            app:layout_constraintStart_toStartOf="@+id/topAmountPrefix"
            app:layout_constraintTop_toBottomOf="@+id/topAmountPrefix"
            />

        <Button
            android:id="@+id/btnMax"
            style="@style/ButtonSmallGrey_4"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:text="@string/Send_Button_Max"
            app:layout_constraintEnd_toStartOf="@+id/btnSwitch"
            app:layout_constraintTop_toTopOf="@+id/btnSwitch"
            />

        <ImageButton
            android:id="@+id/btnSwitch"
            style="@style/ThemedImageButtonSmallGrey_4"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/round_import_export_24_px"
            app:layout_constraintBottom_toBottomOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/txtHintInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?BottomDialogTextColor"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/topAmountPrefix"
            app:layout_constraintTop_toBottomOf="@+id/amountDivider"
            tools:text="$ 210"
            />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="18dp"
            android:background="@color/steel_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHintInfo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txtAddress"
                    style="@style/BottomDialogText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:hint="@string/Send_Hint_Address"
                    android:singleLine="true"
                    android:textSize="16sp"
                    tools:text="1QHEbZG8NQT6vYCC8pyHvteNcmJ78B3ak3"
                    />

                <TextView
                    android:id="@+id/txtAddressError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_error"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="@string/Send_Error_IncorrectAddress"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnBarcodeScan"
                style="@style/ThemedImageButtonSmallGrey_4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/qr_code"
                />

            <Button
                android:id="@+id/btnPaste"
                style="@style/ButtonSmallGrey_4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/Send_Button_Paste"
                />

            <ImageButton
                android:id="@+id/btnDeleteAddress"
                style="@style/ThemedImageButtonSmallGrey_4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:src="@drawable/round_delete_24_px"
                android:visibility="gone"
                />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="67.5dp"
            android:background="@color/steel_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/feeInfoArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            >
            <TextView
                android:id="@+id/feeError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="9dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/red_warning"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Transaction fees for USDT (ERC20) paid in Ethereum. You don&apos;t have 0,00028 ETH."
                />

            <TextView
                android:id="@+id/txtFeePrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/grey"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtFeeSecondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="0.02 BTC"
                />

            <TextView
                android:id="@+id/txtFeeSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/grey"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtFeePrimary"
                tools:text="$0.02"
                />
        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/btnSend"
            style="@style/ButtonYellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/Balance_Send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feeInfoArea"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/numPadItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendForm"
        app:layout_constraintVertical_weight=".35"
        />
</android.support.constraint.ConstraintLayout>
