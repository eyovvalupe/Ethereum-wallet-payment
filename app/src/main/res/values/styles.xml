<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:colorBackground">@color/appBackground</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:background">@drawable/button_yellow_background</item>
    </style>

    <style name="ButtonGreen" parent="Button">
        <item name="android:background">@drawable/button_green_background</item>
    </style>

    <style name="ButtonYellow" parent="Button">
        <item name="android:background">@drawable/button_yellow_background</item>
    </style>

    <style name="ButtonNegative" parent="Button">
        <item name="android:background">@drawable/button_grey_background</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Description">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#c8c7cc</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TabTitle">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">34sp</item>
    </style>

</resources>
