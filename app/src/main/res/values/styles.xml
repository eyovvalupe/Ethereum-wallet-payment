<resources>

    <!-- App themable color names -->
    <attr name="NumpadNumberColor" format="reference|color" />
    <attr name="NumpadLettersColor" format="reference|color" />
    <attr name="BallanceCoinNameColor" format="reference|color" />
    <attr name="BallanceCoinAmountColor" format="reference|color" />
    <attr name="TitleColor" format="reference|color" />
    <attr name="SettingBackgroundColor" format="reference|color" />
    <attr name="WalletBackgroundColor" format="reference|color" />
    <attr name="TransactionsBackgroundColor" format="reference|color" />
    <attr name="TransactionItemBackgroundColor" format="reference|color" />
    <attr name="SettingItemBackgroundColor" format="reference|color" />
    <attr name="CoinItemBackgroundColor" format="reference|color" />
    <attr name="FilterButtonBackgroundColor" format="reference|color" />
    <attr name="BottomNavigationBackgroundColor" format="reference|color" />
    <attr name="StatusBarColor" format="reference|color" />
    <attr name="RippleColor" format="reference|color" />
    <attr name="NumpadDeleteButton" format="reference" />
    <attr name="AppBarBackground" format="reference" />
    <attr name="BottomNavBackground" format="reference" />

    <!-- Base application theme. -->
    <style name="DarkModeAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/yellow_crypto</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:colorBackground">@color/appBackground</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow_crypto</item>

        <item name="NumpadNumberColor">@color/white</item>
        <item name="NumpadLettersColor">@color/white_50</item>
        <item name="BallanceCoinNameColor">@color/white</item>
        <item name="BallanceCoinAmountColor">@color/white</item>
        <item name="TitleColor">@color/white</item>
        <item name="SettingBackgroundColor">@color/dark</item>
        <item name="WalletBackgroundColor">@color/dark</item>
        <item name="TransactionsBackgroundColor">@color/dark</item>
        <item name="TransactionItemBackgroundColor">@color/transaction_item_background_dark</item>
        <item name="CoinItemBackgroundColor">@color/coin_item_background_dark</item>
        <item name="FilterButtonBackgroundColor">@color/appBackground</item>
        <item name="SettingItemBackgroundColor">@color/setting_item_background_dark</item>
        <item name="BottomNavigationBackgroundColor">@color/dark</item>
        <item name="StatusBarColor">@color/dark</item>
        <item name="RippleColor">@color/ripple_white</item>
        <item name="NumpadDeleteButton">@drawable/round_backspace_24px</item>
        <item name="AppBarBackground">@drawable/shadow_top_navigation</item>
        <item name="BottomNavBackground">@drawable/shadow_bottom_navigation</item>
    </style>

    <style name="LightModeAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bars_color</item>
        <item name="colorPrimaryDark">@color/bars_color</item>
        <item name="colorAccent">@color/yellow_crypto</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/bars_color</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow_crypto</item>

        <item name="NumpadNumberColor">@color/dark</item>
        <item name="NumpadLettersColor">@color/dark</item>
        <item name="BallanceCoinNameColor">@color/dark</item>
        <item name="BallanceCoinAmountColor">@color/dark</item>
        <item name="TitleColor">@color/dark</item>
        <item name="SettingBackgroundColor">@color/lightBackground</item>
        <item name="WalletBackgroundColor">@color/lightBackground</item>
        <item name="TransactionsBackgroundColor">@color/lightBackground</item>
        <item name="TransactionItemBackgroundColor">@color/transaction_item_background_light</item>
        <item name="CoinItemBackgroundColor">@color/coin_item_background_light</item>
        <item name="FilterButtonBackgroundColor">@color/bars_color</item>
        <item name="SettingItemBackgroundColor">@color/setting_item_background_light</item>
        <item name="BottomNavigationBackgroundColor">@color/bars_color</item>
        <item name="StatusBarColor">@color/bars_color</item>
        <item name="RippleColor">@color/ripple_black</item>
        <item name="NumpadDeleteButton">@drawable/round_backspace_dark_24px</item>
        <item name="AppBarBackground">@drawable/shadow_top_navigation_light</item>
        <item name="BottomNavBackground">@drawable/shadow_bottom_navigation_light</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:background">@drawable/button_yellow_background_12</item>
    </style>

    <style name="ButtonGrey_4" parent="Button">
        <item name="android:background">@drawable/button_grey_background_4</item>
        <item name="android:height">36dp</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ButtonGreen_12" parent="Button">
        <item name="android:background">@drawable/button_green_background_12</item>
    </style>

    <style name="ButtonGreen_4" parent="Button">
        <item name="android:background">@drawable/button_green_background_4</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ButtonYellow" parent="Button">
        <item name="android:textColor">@color/button_yellow_text_color_selector</item>
        <item name="android:background">@drawable/button_yellow_background_12</item>
    </style>

    <style name="ButtonYellowOnDark" parent="Button">
        <item name="android:textColor">@color/button_yellow_on_dark_text_color_selector</item>
        <item name="android:background">@drawable/button_yellow_on_dark_background_12</item>
    </style>

    <style name="ButtonNegative" parent="Button">
        <item name="android:background">@drawable/button_grey_background_12</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/yellow_crypto</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Description">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#c8c7cc</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabTitle">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">?TitleColor</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TabTitleSmall" parent="TabTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarStyle">
        <item name="colorControlNormal">@color/yellow_crypto</item>
    </style>

    <style name="BottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimations</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="BottomDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="BottomDialogText">
        <item name="android:textColorHint">#808a8a8f</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SwitchTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlActivated">@color/green_crypto</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">@color/grey</item>
    </style>

    <style name="TransactionInfoFieldName">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TransactionInfoFieldValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.Shadow.AppBar" parent="">
        <item name="android:background">?AppBarBackground</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="layout_anchorGravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

</resources>
