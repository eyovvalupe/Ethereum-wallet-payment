<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#f5282b35</item>
        <item name="buttonStyle">@style/Button</item>

    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">#f7b731</item>
        <item name="android:textColor">#000000</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonNegative" parent="Button">
        <item name="android:background">#8a8a8f</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">#f7b731</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Description">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#c8c7cc</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
