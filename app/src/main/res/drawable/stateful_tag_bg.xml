<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="#b2ffffff"
    >
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_activated="false">
                <shape android:shape="rectangle">

                    <solid android:color="#282b35"/>
                    <padding
                        android:bottom="7dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="8dp"
                        />
                    <corners android:radius="15dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#ffad01"
                        />
                </shape>
            </item>
            <item android:state_activated="true">
                <shape android:shape="rectangle">

                    <solid android:color="#ffad01"/>
                    <padding
                        android:bottom="7dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="8dp"
                        />
                    <corners android:radius="15dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
