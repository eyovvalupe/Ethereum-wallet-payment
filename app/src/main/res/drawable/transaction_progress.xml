<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <solid android:color="?TransactionTextBoxBackground"/>
            <corners android:radius="2dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/steel_15"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <solid
                    android:color="@color/green_crypto_20"
                    />
            </shape>
        </clip>
    </item>

</layer-list>
