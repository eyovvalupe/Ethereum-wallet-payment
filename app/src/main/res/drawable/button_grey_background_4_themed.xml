<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?BottomSendButtonHighlightedColor" />
            <corners android:radius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/steel_15" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_crypto" />
            <corners android:radius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/steel_15" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?BottomSendButtonColor" />
            <corners android:radius="4dp" />
            <stroke android:width="0.5dp" android:color="@color/steel_15" />
        </shape>
    </item>
</selector>
