<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:state_error="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/InputBackground" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/red_50" />
        </shape>
    </item>
    <item app:state_warning="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/InputBackground" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/yellow_d" />
        </shape>
    </item>
    <item android:drawable="@drawable/input_background_themed" />
</selector>
