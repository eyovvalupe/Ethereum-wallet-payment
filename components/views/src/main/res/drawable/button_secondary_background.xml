<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/elena" />
            <stroke android:width="1dp" android:color="@color/steel_20" />
        </shape>
    </item>
    <item android:state_pressed="false">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="4dp" />
                <solid android:color="@color/jeremy" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="4dp" />
                <gradient android:angle="270" android:endColor="?attr/SecondaryButtonEndGradient" android:startColor="?attr/SecondaryButtonStartGradient" />
                <stroke android:width="1dp" android:color="@color/jeremy" />
            </shape>
        </item>
    </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/jeremy" />
            <stroke android:width="1dp" android:color="@color/steel_20" />
        </shape>
    </item>
</selector>
